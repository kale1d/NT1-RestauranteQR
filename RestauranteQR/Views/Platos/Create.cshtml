                <select name="ingrediente">
                    <option value="">Seleccione el primer ingrediente</option>
                    for(int i = 0; i < Ingrediente.List(); i++){
                    @*<option value="@Ingrediente.toList(i)">@Ingrediente.toList(i)</option>*@
                    }

                    @*<option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>*@
