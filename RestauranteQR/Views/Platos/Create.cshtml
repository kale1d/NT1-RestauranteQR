                <span asp-validation-for="Ingrediente1" class="text-danger"></span>
                </br>
                </br>

                <label asp-for="Ingrediente2" class="control-label"></label>
                @*<input asp-for="Ingrediente2" class="form-control" />*@
                <select name="number">
                    <option value="">Seleccione el segundo ingrediente</option>
                    <option value="1">A</option>
                    <option value="2">B</option>
                    <option value="3">C</option>
                </select>
                <span asp-validation-for="Ingrediente2" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
