@{
    Layout = "_LayoutLogin";
}

<div class="text-center">
    <h1>Logueate al Restooo</h1>
</div>

<hr />

<div class="row">
    <div class="col-lg-offset-4 col-md-4">
        <form method="post" asp-action="Login">
            <div class="text-danger">
                @ViewBag.Error
            </div>
            <div class="form-group">
                <label laber-for="rol" class="control-label">Rol:</label>
                <input name="rol" type="radio" value="@Rol.Administrador" /> @Rol.Administrador.ToString()
            </div>
            <div class="form-group">
                <label laber-for="email" class="control-label">Email:</label>
                <input name="email" class="form-control" type="text" value="@ViewBag.Email" />
            </div>
            <div class="form-group">
                <label label-for="Password" class="control-label">Contraseña:</label>
                <input name="password" class="form-control" type="password" />
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-success" />
            </div>
        </form>

        <p>Sos admin y queres agregar un nuevo administrador?</p>
        <a asp-controller="Usuarios" asp-action="Create">Ingresa aqui</a><p>(Recuerde que debe estar previamente registrado)</p>
    </div>
</div>