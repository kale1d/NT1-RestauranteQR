@model IEnumerable<RestauranteQR.Models.PlatosPorPedido>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Tu pedido fue:</h4>
    <hr />
    <table class="table">
        <dl class="row">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombrePlato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioPlato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>

        </tr>

        </dl>

  
            @foreach (var item in Model)
            {
                <br />
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombrePlato)
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => item.PrecioPlato)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cantidad)

                    </td>
               
                </tr>
            }
    </table>




</div>


<div>
    <h3 style="text-align: center;">
        El total fue: $@ViewBag.total
        </h3>
</div>
<div>

    <a asp-action="Create">Back to List</a>
</div>
