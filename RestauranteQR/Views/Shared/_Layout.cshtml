<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RestauranteQR</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body id="body">
    <header>
        <div class="row fondo" >
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light col-9 fondo">
                <div class="container fondo">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img id="imgLogo" src="~/Imagenes/logo2.png" alt="logo" /></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Home" asp-action="Carta" class="nav-link text-dark">Menu</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Pedidos" asp-action="Create" class="nav-link text-dark">Pedido</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Ingredientes" asp-action="Index">Ingredientes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Platos" asp-action="Index">Platos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Login" asp-action="Logout">Logout</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3 principal">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted fondo">
        <div class="container">
            <div class="row">
                <div class="col-4">
                    <h6> &copy; RestauranteQR 2021 </h6>
                </div>
                <div class="col-4">

                </div>
                <div class="col-4">
                    <h6 style="text-align: center; color: black;">Nuestras redes</h6>
                    <div class="row">
                        <div class="col-6 redes"><a href="https://www.instagram.com/?hl=es" target="_blank"><img src="/Imagenes/instagram2.png" alt="insta"</a></div>
                        <div class="col-6 redes"><a href="https://es-la.facebook.com/" target="_blank"><img src="/Imagenes/facebook2.png" alt="face"</a></div>
                    </div>
                </div>
            </div>

            </div>
            
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    <style>

        #body {
            background-image: url(/Imagenes/fondo2.png);
        }
        .principal {
            height: 100vh;
        }

        .fondo {
            background-color: #B4C4C3;
            padding: 0;
            height: 100px;
            }
       
        #imgLogo {
            width: 25%;
            margin-left: 30%;
        }

        .espacioLogo{
            background-color: white;
        }

        .redes img{
            width: 50%;
        }
        
        .redes{
            text-align: center;
        }

        </style>
</body>
</html>
